{
	"hosting": {
		"public": "functions/views",
		"rewrites": [
			{
				"source": "**",
				"function": "app"
			}
		],
		"headers": [
			{
				"source": "**/*.@(eot|otf|ttf|ttc|woff|woff2|font.css)",
				"headers": [
					{
						"key": "Access-Control-Allow-Origin",
						"value": "*"
					}
				]
			},
			{
				"source": "**/*.@(js|css|json)",
				"headers": [
					{
						"key": "Cache-Control",
						"value": "max-age=604800"
					}
				]
			},
			{
				"source": "**/*.@(jpg|jpeg|gif|png|ico)",
				"headers": [
					{
						"key": "Cache-Control",
						"value": "max-age=604800"
					}
				]
			}
		]
	}
}
